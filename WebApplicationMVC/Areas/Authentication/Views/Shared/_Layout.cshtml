@using FrameWork.MVC.Helper
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - سامانه شارپ</title>
        @Scripts.Render("~/Script/modernizr")
        @Styles.Render("~/Content/Plug-In/Bootstrap")
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLinkWithIcon("سامانه جامع نرم افزاری شارپ", "index", "home", new { @area = "" }, new { @class = "navbar-brand", @style = "font-family: BFantezy;font-size: 30px" }, "fa fa-home fa-inverse ")
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">  
                       
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Users Manager", "Index", "UsersAdmin", new {@area = "Authentication"}, null)</li>
                            <li>@Html.ActionLink("Roles Manager", "Index", "RolesAdmin", new {@area = "Authentication"}, null)</li>     
                        }
                       
                    </ul>
                   
                    @Html.Partial("_Authenticate");
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/Script/jquery")
        @Scripts.Render("~/Script/Plug-In/Bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>