@using FrameWork.MVC.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - سامانه شارپ</title>

    @Scripts.Render("~/Script/modernizr")
    @Styles.Render("~/Content/Bootstrap")
    @Styles.Render("~/Content/angular")
    @Styles.Render("~/Content/css")


</head>
<body ng-app="HomeApp" ng-controller="homeController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <ul class="nav navbar-nav">
                    <li class="dropdown">

                    </li>
                </ul>


                @Html.ActionLinkWithIcon("سامانه جامع نرم افزاری شارپ", "index", "home", null, new { @class = "navbar-brand", @style = "font-family: BFantezy;font-size: 25px" }, "fa fa-home fa-inverse ")

            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("~/areas/news/Views/Shared/_Authenticate.cshtml")

            </div>

        </div>

    </div>


    <div class="container body-content">



        @RenderBody()
        <hr />
        <footer>

            <p>&copy; @DateTime.Now.Year حق کپی رایت متعلق به گروه نرم افزاری شارپ  است  </p>
            

        </footer>
    </div>


    @Scripts.Render("~/Script/jquery")
    @Scripts.Render("~/Script/Bootstrap")
    @Scripts.Render("~/Script/angular")
    @Scripts.Render("~/Script/ngModule")
    @RenderSection("scripts", required: false)
</body>
</html>