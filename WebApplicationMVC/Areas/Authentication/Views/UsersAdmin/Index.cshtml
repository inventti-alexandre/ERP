@model List<DomainLayer.DB_Model.Authentication.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "../../../Admin/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت کاربران</h2>

<p>
    
    @Html.ActionLink("تعریف کاربر جدید", "Create",null,new{@class="btn btn-info"})

</p>
<table class="table table-striped table-hover table-bordered table-condensed">
    <tr>
        <th>
            نام کاربری
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td >
             
                @Html.ActionLink("خصوصیات", "index", "ClaimsAdmin", new { id = item.Id }, new { @area = "Authentication" ,@class="btn btn-info"}) 
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("حذف", "Delete", new { id = item.Id},new{@class="btn btn-danger"})
            </td>
        </tr>
    }

</table>