@model List<DomainLayer.DB_Model.Authentication.ApplicationRole>

@{
    
    Layout = "../../../Admin/Views/Shared/_Layout.cshtml";
}

<h2>تقش ها</h2>

<p>
    @Html.ActionLink("تعریف نقش جدید", "Create",null,new{@class="btn btn-success"})
</p>
<table class="table table-striped table-hover table-bordered table-condensed">
    <tr>
        <th>
            Role Value
        </th>
        <th>

        </th>
        
        <th>
            Role Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DisplayedName)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("حذف", "Delete", new {id = item.Id},new{@class="btn btn-danger"})
            </td>
        </tr>
    }

</table>